{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "jekyllserve",
            "type": "shell",
            "command": "bundle exec jekyll serve",
            "presentation": {
                "reveal": "never"
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern" : [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "Server address: ",
                        "endsPattern": "Server running"
                    }
                }
            ]
        }
    ]
}